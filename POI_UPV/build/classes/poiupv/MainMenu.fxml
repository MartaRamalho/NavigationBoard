<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="box" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poiupv.MainMenuController">
   <children>
      <VBox fx:id="menu" alignment="CENTER" prefHeight="563.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #fcf4eb;" stylesheets="@mainWindowStyleSheet.css">
         <children>
            <ImageView fitHeight="200.0" fitWidth="193.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../map_icon.png" />
               </image>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#handleLogInPressed" styleClass="menu-buttons" text="Log In">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="17.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../login_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleSignUpPressed" styleClass="menu-buttons" text="Sign Up">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../signup_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
